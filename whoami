notification_11=("Hostname değiştiriliyor...")
notification_12=("Anonim DNS sunucuları ayarlarlanıyor...")
notification_13=("Tüm ağ arayüzlerinin MAC Adresi değiştiriliyor...")
notification_14=("Uygun ağ arayüzü tespit edilemedi. Whoami bir sonraki adıma geçiyor...")
notification_15=("Zaman dilimi UTC olarak ayarlanıyor...")
notification_16=("IP adresi anonim olarak gizleniyor...")
notification_17=("Anonimleştirmme başarılı. Sen kimsin?")
notification_18=("Whoami zaten çalışmıyor !")
notification_19=("Hostname yedeklerden geri yükleniyor...")
notification_20=("DNS sunucuları yedeklerden geri yükleniyor...")
notification_21=("Ağ arayüzlerinin MAC adresleri yedeklerden geri yükleniyor...")
notification_22=("Zaman dilimi varsayılan olarak ayarlanıyor...")
notification_23=("IP adresi normale döndürülüyor...")
notification_24=("Whoami durduruldu. Dikkatli ol.")
#lang_t=$(touch $BACKUPDIR/Turkish.txt)
}       

# whoami start functions
start() {

# ask language selection question 
if [ $(id -u) -ne 0 ]; then
     exit 1

else 
    sleep 0.1
fi 
msg "Select a language to continue

[1] English
[2] Türkçe
"
n=0
until [ $n -ge 99 ]
do
command &&
input & read lang
if  [ -z $lang ]; then
     warn "Empty input"
        
elif [ $lang == 1 ]; then        
      English
      break
         
elif [ $lang == 2 ]; then
      Turkish
      break
          
else
      [ $lang -le 5 ] &> /dev/null 
	  warn "Incorrect input"
fi
done

# check backup directory
if [ ! -d $BACKUPDIR ]; then
    mkdir -p $BACKUPDIR
    mkdir -p $MBACKUPDIR
    $lang_t
else 
     err "$notification_1"
     exit 1
fi

# check network connection
if curl ident.me &> /dev/null ; then
	 sleep 0.1
else err "$notification_2"
     exit 1
fi
    
# check and install tor
if dpkg -l |grep tor &> /dev/null ; then
	 sleep 0.1
else warn "$notification_3"
     if apt-get install tor -y &> /dev/null ; then
	    sleep 0.1
     else err "$notification_4" && exit 1
     fi
fi

# check and install sdmem
if dpkg -l |grep secure-delete &> /dev/null ; then
	 sleep 0.1
else warn "$notification_5"
     if apt-get install secure-delete  -y &> /dev/null ; then
	    sleep 0.1
     else err "$notification_6" && exit 1
     fi
fi

info "$notification_7"

# backup hostname
cat /etc/hostname > $BACKUPDIR/hostname.bak

# backup resolv_conf
mv /etc/resolv.conf $BACKUPDIR/resolv.conf.bak

# backup mac addresses
IFACES=$(ip -o link show | awk -F': ' '{print $2}')
    for IFACE in $IFACES; do
        if [ $IFACE != "lo" ]; then
            cat /sys/class/net/$IFACE/address > $MBACKUPDIR/$IFACE
        fi
    done

# backup timezone
timedatectl show | grep Timezone | sed 's/Timezone=//g' > $BACKUPDIR/timezone.bak

# backup torrc
mv "$TORRC" $BACKUPDIR/torrc.bak

# backup iptables
iptables-save > $BACKUPDIR/iptables.rules.bak

# clean system logs
info "$notification_8"
python - <<END
